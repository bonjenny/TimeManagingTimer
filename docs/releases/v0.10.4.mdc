```typescript
{
  id: string;           // 문서 ID
  nickname: string;     // 작성자 (기본: "익명")
  title: string;        // 제목
  content: string;      // 내용
  password_hash: string;// 비밀번호 해시
  category: 'idea' | 'bug' | 'etc';
  created_at: number;   // 생성 timestamp
  updated_at: number;   // 수정 timestamp
  comments: Comment[];  // 댓글 배열
}
